<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.vendingmachine.activity.LoginActivity"
    android:background="@drawable/imagem_login" >

    <Button
        android:id="@+id/botaologin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/senha"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:background="@drawable/botao_operacoes"
        android:text="Acessar" />

    <EditText
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/senha"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"
        android:ems="10"
        android:gravity="left"
        android:hint="Login" 
        android:maxLength="20"
        />

    <EditText
        android:id="@+id/senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:maxLength="10"
        android:gravity="left"
        android:hint="Senha"
        android:inputType="textPassword" >

    </EditText>
    
</RelativeLayout>
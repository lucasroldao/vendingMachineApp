<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txDataSolicitacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Data da solicitação: "
        android:textStyle="bold"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtDataSolicitacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/txDataSolicitacao"
        android:layout_alignBaseline="@+id/txDataSolicitacao"
        android:text="10/05/1994"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txNomeCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txDataSolicitacao"
        android:text="Nome do cliente: "
        android:layout_marginStart="10sp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtNomeCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDataSolicitacao"
        android:layout_toEndOf="@+id/txNomeCliente"
        android:text="Otavio"
        android:layout_alignBaseline="@+id/txNomeCliente"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txNomeCliente"
        android:text="Endereço: "
        android:layout_marginStart="10sp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNomeCliente"
        android:layout_toEndOf="@+id/txEndereco"
        android:text="Rua teste"
        android:layout_alignBaseline="@+id/txEndereco"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    
    <TextView
        android:id="@+id/txNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txEndereco"
        android:text="Número: "
        android:layout_marginStart="10sp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/txNumero"
        android:text="147"
        android:layout_marginStart="3sp"
        android:layout_below="@+id/txtEndereco"
        android:layout_alignBaseline="@+id/txNumero"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    
    <TextView
        android:id="@+id/txTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txNumero"
        android:text="Telefone: "
        android:layout_marginStart="10sp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNumero"
        android:layout_toEndOf="@+id/txTelefone"
        android:text="12345678"
        android:layout_alignBaseline="@+id/txTelefone"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/txCodMaquina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txTelefone"
        android:text="Cód. Maquina: "
        android:layout_marginStart="10sp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtCodMaquina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTelefone"
        android:layout_toEndOf="@+id/txCodMaquina"
        android:text="MQ1"
        android:layout_alignBaseline="@+id/txCodMaquina"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
     <TextView
        android:id="@+id/txModeloMaquina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txCodMaquina"
        android:text="Modelo: "
        android:layout_marginStart="10sp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />
     
     <TextView
        android:id="@+id/txtModeloMaquina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txModeloMaquina"
        android:layout_toEndOf="@+id/txModeloMaquina"
        android:text="Glass"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/txModeloMaquina"
        android:text="Status: "
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/txStatus"
        android:layout_alignBaseline="@+id/txStatus"
        android:text="Pendente"
        android:textColor="@color/Red"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>